<MainLayoutSetter Links="@Links" EndBGLighter=true>
	<DisplayHero>
		<Hero Large=false>
			<MudText Typo="Typo.h4" Class="mono-font">
				My <strong>Experience</strong>
			</MudText>
			<MudText Typo="Typo.body1" Class="mono-font">
				More details on my work history
			</MudText>
		</Hero>
	</DisplayHero>
</MainLayoutSetter>

<SectionBase Id="DataHorizon" BGLighter=true Header="Work">
	<DataHorizonExperienceSection />
</SectionBase>
<SectionBase Id="Mypower" BGLighter=false>
	<MypowerExperienceSection />
</SectionBase>
<SectionBase Id="UoB" BGLighter=true Header="Education">
	<UoBExperienceSection />
</SectionBase>

@code {
	private List<LinkDetails>? Links { get; } = new() {
		new("./", "Home") };
}
