@page "/"

<PageTitle>William Sullivan - Software Developer</PageTitle>

<MainLayoutSetter Links="@Links" EndBGLighter=false>
	<Hero>
		<div class="hero-buffer-large">
			<MudText Typo="Typo.h4" Class="mono-font">
				Hi! I'm <strong>William Sullivan</strong>
			</MudText>
			<MudText Typo="Typo.body1" Class="mono-font">
				I'm a <strong>software developer</strong>
			</MudText>
			<MudText Typo="Typo.body2" Class="mono-font">
				This website is <strong>under construction</strong>.
			</MudText>
		</div>
	</Hero>
</MainLayoutSetter>

<AboutSection Id="about" BGLighter=true />
<WorkExperienceSection Id="workExperience" BGLighter=false />
<ProjectsSection Id="projects" BGLighter=true />
<ContactSection Id="contact" BGLighter=false />

@code {
	private List<LinkDetails>? Links { get; } = new() {
		new("#", "Home"),
		new("#about", "About"),
		new("#workExperience", "Experience"),
		new("#projects", "Projects"),
		new("#contact", "Contact") };
}

