<BigMudPaper>
	<ResponsiveSubTitle>
		<MainContent>
			<strong>@JobTitle</strong>
		</MainContent>
		<SubContent>
			<i>@@@Company</i>
		</SubContent>
	</ResponsiveSubTitle>


	<MudText Typo="Typo.body2" Class="pb-3"><i>@Dates</i></MudText>

	<MudText>
		<ul class="bullet-points">
			@ChildContent
		</ul>
	</MudText>
</BigMudPaper>

@code {
	[Parameter]
	public string JobTitle { get; set; } = "Job Title";
	[Parameter]
	public string Company { get; set; } = "Company";

	[Parameter]
	public string Dates { get; set; } = "January 0000 - December 9999";

	[Parameter]
	public RenderFragment? ChildContent { get; set; }
}
