<IndexSectionBase BackgroundColor="@BackgroundColor">
	<MudStack AlignItems="AlignItems.Center" Class="spaced-block">
		<MudText Typo="Typo.h3" Align="Align.Center" Class="no-space">Get in Touch</MudText>
		<MudText Align="Align.Center">I’m always available for contact, whether you have questions or an exciting opportunity. Please don’t hesitate to contact me.</MudText>

		<MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="mailto:hello@WilliamSullivan.dev">Contact</MudButton>

		<MudContainer Class="d-flex justify-space-around" Style="max-width: 256px;">
			<MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Primary" aria-label="LinkedIn" Href="https://www.linkedin.com/in/william-sullivan-0764561b8/" Target="_blank" />
			<MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Primary" aria-label="GitHub" Href="https://github.com/Rielk" Target="_blank" />
			<MudIconButton Icon="@Icons.Material.TwoTone.Mail" Color="Color.Primary" aria-label="Email" Href="mailto:hello@WilliamSullivan.dev" />
		</MudContainer>
	</MudStack>
</IndexSectionBase>

@code {
	[Parameter]
	public string? BackgroundColor { get; set; }
}
