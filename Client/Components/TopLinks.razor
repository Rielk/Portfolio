<MudHidden Breakpoint="Breakpoint.SmAndDown">
	@foreach (var detail in NavLinks)
	{
		<MudButton Size="Size.Large" Href="@detail.HRef">
			@detail.Content
		</MudButton>
	}
</MudHidden>

<MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
	<MudMenu Icon="@Icons.Material.Filled.Menu">
		@foreach (var detail in NavLinks)
		{
			<MudMenuItem>
				<MudButton Size="Size.Large" Href="@detail.HRef">
					@detail.Content
				</MudButton>
			</MudMenuItem>
		}
	</MudMenu>
</MudHidden>

@code {
	[Parameter, EditorRequired]
	public List<NavLinkDetails> NavLinks { get; set; } = new();

	[Parameter]
	public bool MenuHidden { get; set; } = true;

	private bool IgnoreNextHide = false;

	public void ToggleMenu()
	{
		MenuHidden = !MenuHidden;
		IgnoreNextHide = true;
	}

	public void HideMenu()
	{
		if (!IgnoreNextHide)
			MenuHidden = true;
		IgnoreNextHide = false;
	}
}
